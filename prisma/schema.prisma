generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Difficulty {
    EASY
    MEDIUM
    HARD
}

enum Role {
    USER
    ADMIN
}

enum submissionStatus {
    CORRECT
    INCORRECT
}

model Users {
    id          String        @id @default(uuid())
    Role        Role          @default(USER)
    email       String        @unique
    username    String
    password    String
    Submissions Submissions[] // Relation to all the Submissions of this user
}

model Problems {
    id             Int           @id @unique @default(autoincrement())
    title          String
    description    String
    examples       Json
    testCases      Json // This is going to be a JSON string object with mulitple testcases
    Submissions    Submissions[] // Relation to the Submissions of this problem
    difficulty     Difficulty
    AcceptanceRate Float
    isSolved       Boolean       @default(false)
}

model Submissions {
    id             String           @id @default(uuid())
    answer         String
    SubmissionStat submissionStatus
    Users          Users            @relation(fields: [usersId], references: [id])
    usersId        String
    Problems       Problems         @relation(fields: [problemsId], references: [id])
    problemsId     Int
}
